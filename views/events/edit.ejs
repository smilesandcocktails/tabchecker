<div class="editEvent">

<h2>I want to update: <%-foundEvent.eventName%></h2>

<form action="/events/" + <foundEvent._id method="GET">
  <button type="submit"><i class="material-icons">&#xE14A;</i></button>
</form>

<form id="editEventForm" action=<%= "/events/" + foundEvent._id + "?_method=PUT" %> method="POST">
  <table>
    <tr>
      <td>
        <label for="eventName">Event Name:</label>
      </td>
      <td>
        <input type="text" name="eventName" value="<%=foundEvent.eventName%>">
        <button type="submit"><i class="material-icons">&#xE923;</i></button>
      </td>
    </tr>
    <tr>
      <td>
        <label for="date">Event Date:</label>
      </td>
      <td>
        <input id="updatedDate" type="date" name="date" value="<%=dateFormat%>">
      </td>
    </tr>
    <tr>
      <td>
        <label for="totalBill">Total Bill:   $</label>
      </td>
      <td>
      <input type="number" name="totalBill" value="<%=foundEvent.totalBill%>">
    </td>
    </tr>
    <tr>
      <td>
        <label for="payer">Payer:</label>
      </td>
      <td>
        <input type="text" name="payer" value="<%=foundEvent.payer%>">
      </td>
    </tr>
    <tr>
      <td>

      </td>
    </tr>
  </table>
</form>

</div>
